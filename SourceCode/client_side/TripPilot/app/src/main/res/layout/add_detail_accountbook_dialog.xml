<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용내역 추가"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/NameOk"
            android:layout_below="@+id/textView16"
            android:background="#E6E6E6"
            android:id="@+id/view5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/dialog_visible_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="date"
            android:id="@+id/date_txt"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:id="@+id/datePick"
            android:background="@drawable/datepick"/>
    </RelativeLayout>
    <EditText
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:hint="사용내역"
        android:id="@+id/NBSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/NBType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"></Spinner>

        <Spinner
            android:layout_centerInParent="true"
            android:id="@+id/NBUseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"></Spinner>

        <EditText
            android:layout_toLeftOf="@+id/won"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:hint="사용금액"
            android:id="@+id/NBSpendMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/NBSpendMoney"
            android:layout_alignBottom="@+id/NBSpendMoney"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="원"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/Checkadd"
            android:id="@+id/Canceladd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:textColor="#00A1FF"
            android:text="취소"
            android:textStyle="bold" />

        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/Checkadd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:textColor="#00A1FF"
            android:text="확인"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
