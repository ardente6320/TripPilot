<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="댓글 등록"
    android:id="@+id/textView18"
    android:textSize="18dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:background="#E6E6E6"
        android:id="@+id/view6"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/star_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view6"
        android:text="별점"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"/>

    <RatingBar
        android:id="@+id/add_comment_star_rating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view6"
        android:layout_toEndOf="@+id/star_textView"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/add_comment_scoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_comment_star_rating"
        android:layout_toEndOf="@+id/add_comment_star_rating"
        android:text="0.0"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/star_textView"
        android:layout_marginTop="10dp"
        android:text="댓글"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/add_comment_txt"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:gravity="top"
        android:hint="댓글 입력"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/add_comment_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/add_comment_txt"
        android:background="#00FF0000"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="댓글 달기" />

    <Button
        android:id="@+id/add_comment_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_comment_confirm"
        android:layout_alignBottom="@+id/add_comment_confirm"
        android:layout_toStartOf="@+id/add_comment_confirm"
        android:background="#00FF0000"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="@string/cancel" />
</RelativeLayout>
