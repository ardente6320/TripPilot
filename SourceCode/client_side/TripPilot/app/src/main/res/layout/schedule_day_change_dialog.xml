<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 수정"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/schedule_day_change_title"/>

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_below="@+id/schedule_day_change_title"
        android:background="#E6E6E6"
        android:id="@+id/view7"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/view7"
        android:id="@+id/schedule_day_spinner"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </Spinner>

    <Button
        android:id="@+id/cancel_modify_date"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/cancel"
        android:background="#00FF0000"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/schedule_day_spinner"
        android:textColor="#00A1FF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/confirm_modify_date"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="확인"
        android:background="#00FF0000"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/cancel_modify_date"
        android:layout_below="@+id/schedule_day_spinner"
        android:textColor="#00A1FF"
        android:textStyle="bold"/>
</RelativeLayout>
