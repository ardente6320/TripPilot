<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="날짜 선택"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:textSize="20dp"
    android:id="@+id/date_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/date_title"
        android:background="#E6E6E6"
        android:id="@+id/view5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/date_pick"
        android:layout_below="@+id/view5"/>
    <Button
        android:id="@+id/cancel_date_Dbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_pick"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/add_date_Dbtn"
        android:background="#00FF0000"
        android:text="@string/cancel"
        android:textColor="#00A1FF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_date_Dbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_date_Dbtn"
        android:layout_alignBottom="@+id/cancel_date_Dbtn"
        android:layout_alignParentEnd="true"
        android:background="#00FF0000"
        android:text="확인"
        android:textColor="#00A1FF"
        android:textStyle="bold" />

</RelativeLayout>
