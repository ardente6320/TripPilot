<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 목록"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/add_text"
        android:id="@+id/view9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empty_add_list"
        android:text="추가된 장소가 없습니다."
        android:layout_below="@+id/view9"
        android:layout_marginTop="50dp"
        android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/add_content_list"
        android:layout_below="@+id/view9"
        android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/add_content_list"
        android:id="@+id/view10"/>
    <FrameLayout
        android:id="@+id/add_content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view10"
        android:layout_marginTop="10dp"
        android:layout_above="@id/add_location_content_btn"></FrameLayout>
    <Button
        android:id="@+id/add_location_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#00FF0000"
        android:layout_marginRight="5dp"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="추가" />

    <Button
        android:id="@+id/cancel_location_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/add_location_content_btn"
        android:background="#00FF0000"
        android:layout_marginRight="5dp"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="@string/cancel" />
</RelativeLayout>
