<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경로 최적화"
        android:id="@+id/textView9"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView9"
        android:background="#E6E6E6"
        android:id="@+id/view2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_city"
        android:layout_alignBottom="@+id/start_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="출발지" />

    <Spinner
        android:id="@+id/start_city"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/destination_city"
        android:layout_alignStart="@+id/destination_city"
        android:layout_below="@+id/view2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/destination_city"
        android:layout_alignBottom="@+id/destination_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="도착지" />

    <Spinner
        android:id="@+id/destination_city"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_below="@+id/start_city"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9" />

    <Button
        android:id="@+id/optimize_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/destination_city"
        android:layout_marginTop="12dp"
        android:background="#00FF0000"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="확인" />

    <Button
        android:id="@+id/cancel_optimize_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/optimize_btn"
        android:layout_toLeftOf="@id/optimize_btn"
        android:background="#00FF0000"
        android:textColor="#00A1FF"
        android:textStyle="bold"
        android:text="취소" />
</RelativeLayout>
