<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/search_list_item">

    <ImageView
        android:id="@+id/searched_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/prepare_img"
        />

    <TextView
        android:id="@+id/searched_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searched_image"
        android:layout_marginStart="26dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/searched_image"
        android:singleLine="true"
        android:text="test"
        android:textColor="#000000"
        android:textSize="15dp" />

    <RatingBar
        android:id="@+id/searched_star_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searched_name"
        android:layout_below="@+id/searched_name"
        android:layout_marginTop="11dp"
        android:isIndicator="true" />

    <ImageButton
        android:id="@+id/add_to_schedule_btn"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/plus"
        android:background="#00FF0000"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/searched_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E6E6E6"
        android:id="@+id/view8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
