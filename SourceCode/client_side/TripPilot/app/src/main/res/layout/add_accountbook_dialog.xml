<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가계부 등록"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/NameOk"
        android:layout_below="@+id/textView16"
        android:background="#E6E6E6"
        android:id="@+id/view5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/view5"
        android:layout_marginStart="11dp"
        android:text="가계부 이름"
        android:textColor="#000000"
        android:textSize="12dp"
        android:id="@+id/textView17" />

    <EditText
        android:id="@+id/accountBookName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView17"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:singleLine="true"
        android:hint="가계부 이름을 입력하세요"/>

    <Button
        android:id="@+id/NameOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/accountBookName"
        android:layout_marginTop="15dp"
        android:background="#00FF0000"
        android:text="확인"
        android:textColor="#00A1FF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/NmaeCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NameOk"
        android:layout_alignBottom="@+id/NameOk"
        android:background="#00FF0000"
        android:layout_toStartOf="@+id/NameOk"
        android:textColor="#00A1FF"
        android:text="취소"
        android:textStyle="bold" />
</RelativeLayout>
